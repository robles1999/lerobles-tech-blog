<section class="py-4 py-xl-5 login-tm">
  <div class="container" id="blog-row">
    <div id="home-blog-card" class="card">
      <div class="card-body">
        <div class="row">
          <div class="col d-flex justify-content-between align-items-center">
            <h4 class="d-inline-block">{{post.title}}</h4>
            <p
              class="posted-by text-secondary float-start d-flex align-self-start m-0"
            >Posted on
              {{format_date post.createdAt}}</p>
          </div>
        </div>

        <p class="card-text mt-2 mb-3">{{post.post_content}}</p>
      </div>
    </div>
    {{! <h4 class="mt-5">Comments</h4> }}
    {{#each comments as |comment|}}
      <div id="home-blog-card" class="card">
        <div class="card-body p-3">
          <p class="mt-0 mb-3">{{comment.comment_content}}</p>
          <p class="mb-0 mt-2">-&nbsp;
            {{user.name}}
            ({{format_date comment.comment_dateCreated}})</p>
        </div>
      </div>
    {{/each}}
    <div>
      {{#unless logged_in}}
        <p>* Log in to leave a comment.</p>
      {{/unless}}
    </div>
  </div>
</section>

{{! !:::::::::::::: COMMENT SECTION :::::::::::::::::::: }}
{{#if logged_in}}
  <section class="text-center login-tm mt-0">
    <div class="container">
      <div class="row">
        <div
          class="col-md-8 col-xl-6 text-center mx-auto m-0"
          id="login-header"
        >
          <h2 class="m-0">Add Comment</h2>
        </div>
      </div>
    </div>
    <div class="container">
      <form class="text-start" method="post">
        <label class="form-label" for="new-comment-content">Comment</label>
        <input
          id="new-comment-content"
          class="form-control"
          type="text"
          placeholder="New comment content"
          name="new-comment-content"
        />
      </form>
    </div>
    <button
      id="new-comment-sub-btn"
      class="btn btn-primary mt-5"
      type="button"
      data-post_id="{{post.id}}"
    >Add comment</button>
  </section>
{{/if}}