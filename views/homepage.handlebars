<section class="py-4 py-xl-5 login-tm">
  <div class="container" id="blog-row">
    {{#each posts as |post|}}
      <div id="home-blog-card" class="card">
        <div class="card-body">
          <a href="/post/{{post.id}}"><h4
              class="card-title"
            >{{post.title}}</h4></a>
          <p>Posted by
            {{user.name}}
            on
            {{format_date post.post_dateCreated}}</p>
        </div>
        <div class="post-description-style">
          <p class="px-4">{{post.post_description}}</p>
        </div>
      </div>
    {{/each}}
  </div>
</section>