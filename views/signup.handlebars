<div class="container">
  <div class="row">
    <div class="col-md-8 col-xl-6 text-center mx-auto" id="login-header">
      <h2 id="login-header">Sign up</h2>
    </div>
  </div>
  <div class="row d-flex justify-content-center">
    <div class="col-md-6 col-xl-4">
      <div class="card mb-5">
        <div class="card-body d-flex flex-column align-items-center">
          <form id="signup-form" class="text-center" method="POST">
            <div class="mb-3"><input
                id="user-signup"
                class="form-control"
                type="text"
                name="userName"
                placeholder="User name"
              /></div>
            <div class="mb-3"><input
                id="email-signup"
                class="form-control"
                type="email"
                name="email"
                placeholder="Email"
              /></div>
            <div class="mb-3"><input
                id="password-signup"
                class="form-control"
                type="password"
                name="password"
                placeholder="Password"
              /></div>
            <div class="mb-3"><button
                id="sign-up-btn"
                class="btn btn-primary d-block w-100"
                type="submit"
              >Sign up</button></div>
          </form>
        </div>
      </div>
    </div>
  </div>
</div>