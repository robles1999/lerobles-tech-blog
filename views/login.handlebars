<div class="container">
  <div class="row">
    <div class="col-md-8 col-xl-6 text-center mx-auto" id="login-header">
      <h2 id="login-header">Log in</h2>
    </div>
  </div>
  <div class="row d-flex justify-content-center">
    <div class="col-md-6 col-xl-4">
      <div class="card mb-5">
        <div class="card-body d-flex flex-column align-items-center">
          <form id="login-form" class="text-center" method="">
            <div class="mb-3"><input
                id="email-login"
                class="form-control"
                type="email"
                name="email"
                placeholder="Email"
              /></div>
            <div class="mb-3"><input
                id="password-login"
                class="form-control"
                type="password"
                name="password"
                placeholder="Password"
              /></div>
            <div class="mb-3"><button
                id="login-btn"
                class="btn btn-primary d-block w-100"
                type="submit"
              >Login</button></div>
            <p class="text-muted" id="signup-invitation">Sign up instead</p>
          </form>
        </div>
      </div>
    </div>
  </div>
</div>